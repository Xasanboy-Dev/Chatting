// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int    @id @default(autoincrement())
  name           String
  surname        String
  email          String @unique
  password       String
  chattingUserId Int[]
}

model chat {
  id         Int      @id @default(autoincrement())
  sender     String
  senderID   Int
  message    String
  taker      String
  takerID    Int
  cretedDate DateTime @default(now())
}
